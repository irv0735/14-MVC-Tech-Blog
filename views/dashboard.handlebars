<div class="display-flex align-center justify-space-between">
  <h2>Welcome, {{user_name}}!</h2>
  <a class="btn create-btn" href="/blog-entry">Create Post</a>
</div>


<div class="row mt-4">
  {{#if blogs.length}}
  <div class="col-auto project-list">
    <h3>Current Posts:</h3>

    {{#each blogs as |blog|}}
      <div class="card blog-post">
        <div class="card-header">
          <h2>
            <a href="/blog-entries/edit/{{blog.id}}">{{blog.title}}</a>
          </h2>
          <p class="sub-text">Published on: {{format_date blog.date_created}}</p>
        </div>
      </div>
    {{/each}}
  </div>
  {{/if}}
  
</div>


