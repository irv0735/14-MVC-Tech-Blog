<div class="card blog-post">
  <div class="card-header">
    <h2>{{title}}</h2>
    <p>Created by {{user.user_name}} on {{format_date date_created}}</p>
  </div>
  <div class="card-body">
    <p>{{content}}</p>
  </div>
</div>

{{#each comments as |comment|}}
<div class="card comment single-comment" data-id="{{comment.id}}">
  <div class="card-body">
    <p>{{comment.content}}</p>
  </div>
  <div class="card-footer">
    <p>By: {{comment.user.user_name}} added on {{format_date comment.date_created}}</p>
    {{#if comment.isAuthor}}
    <button class="btn" id="delete-comment">Delete</button>
    {{/if}}
  </div>
</div> 
{{/each}}

{{#if logged_in}}
  <div class="col-md-6">
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content">Comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add-Comment</button>
      </div>
    </form>
  </div>
{{/if}}
<script src="../js/comment.js"></script>