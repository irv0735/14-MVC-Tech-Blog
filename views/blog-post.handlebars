<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.user_name}} on {{format_date date_created}}</p>
</div>

{{#each comments as |comment|}}
<div class="single-comment" data-id="{{comment.id}}">
<p>{{comment.content}}</p>
<p>By: {{comment.user.user_name}} added on {{format_date comment.date_created}}</p>

{{#if comment.isAuthor}}
<button id="delete-comment">Delete</button>
{{/if}} 

</div>
{{/each}}

  <div class="col-md-6">
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-content">Comment:</label>
        <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add-Comment</button>
      </div>
    </form>
  </div>

<script src="../js/comment.js"></script>