  <div class="col-md-6">
    <h3>Edit Post:</h3>

    <form class="form edit-blog-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{title}}"/>
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content">{{content}}</textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </form>
  </div>

  <script src="../../js/blog-edit.js"></script>